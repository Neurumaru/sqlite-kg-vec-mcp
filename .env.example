# Langfuse Configuration
LANGFUSE_SECRET_KEY=your-secret-key-here
LANGFUSE_PUBLIC_KEY=your-public-key-here
LANGFUSE_HOST=https://us.cloud.langfuse.com

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:7b

# Database Configuration
DATABASE_PATH=./knowledge_graph.db

# Embedding Configuration
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=768

# Document Validation Configuration
DOC_MIN_CONTENT_LENGTH=1
DOC_MAX_CONTENT_LENGTH=1000000
DOC_ALLOW_EMPTY_TITLE=false
DOC_ALLOW_REPROCESSING=true
DOC_ALLOW_PROCESSING_WHILE_PROCESSING=false
DOC_MAX_METADATA_SIZE=10000
# DOC_REQUIRED_METADATA_KEYS=author,created_at,source

# Timeout Configuration
TIMEOUT_DEFAULT_REQUEST=30.0
TIMEOUT_OLLAMA_QUICK=5.0
TIMEOUT_OLLAMA_STANDARD=30.0
TIMEOUT_OLLAMA_DOWNLOAD=300.0
TIMEOUT_DATABASE_CONNECTION=30.0
TIMEOUT_DATABASE_BUSY=5.0
TIMEOUT_OBSERVABILITY_EXPORT=30.0
TIMEOUT_OBSERVABILITY_FLUSH=30.0
INTERVAL_METRICS_COLLECTION=60.0
TIMEOUT_EVENT_VALIDATION=60.0